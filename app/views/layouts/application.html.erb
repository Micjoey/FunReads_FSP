<!DOCTYPE html>
<html>
  <head>
    <title>MyReads</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.images = {
        fireworks1: "<%= image_url('fireworks.jpeg')%>",
        fireworks2: "<%= image_url('horizontal_fireworks.jpeg')%>",
      }
    </script>
    <% if logged_in?%>
    <script type="text/javascript">
        window.currentUser = <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
    </script>
    <%end%>

  </head>

  <body>
    <%= yield %>

  </body>
</html>
